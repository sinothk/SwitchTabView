<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/demoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实例Demo" />

    <com.sinothk.switchTabView.style1.segement.SegmentView
        android:id="@+id/sv_segement0"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:lib_ui_view_segementv_borderWidth="1dp"
        app:lib_ui_view_segementv_colorMain="@color/lib_ui_common_color_accent"
        app:lib_ui_view_segementv_colorSub="#FFF"
        app:lib_ui_view_segementv_divideWidth="1dp"
        app:lib_ui_view_segementv_radius="13dp"
        app:lib_ui_view_segementv_textSize="12dp" />

    <com.sinothk.switchTabView.style1.segement.SegmentView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:lib_ui_view_segementv_borderWidth="1dp"
        app:lib_ui_view_segementv_colorMain="@color/lib_ui_common_color_accent"
        app:lib_ui_view_segementv_colorSub="#FFF"
        app:lib_ui_view_segementv_divideWidth="1dp"
        app:lib_ui_view_segementv_radius="4dp"
        app:lib_ui_view_segementv_titles="标签一;标签二;标签三;标签四" />

    <com.sinothk.switchTabView.style1.ScrollTab
        android:id="@+id/stab_tab00"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#F9F9F9"
        android:orientation="vertical"
        app:lib_ui_view_stab_avag="true"
        app:lib_ui_view_stab_indicatorColor="@color/lib_ui_common_color_accent"
        app:lib_ui_view_stab_indicatorPadding="20dp"
        app:lib_ui_view_stab_indicatorRadius="0.5dp"
        app:lib_ui_view_stab_indicatorType="trend"
        app:lib_ui_view_stab_indicatorWeight="1dp"
        app:lib_ui_view_stab_indicatorWidth="40dp"
        app:lib_ui_view_stab_type="view_group" />

    <com.sinothk.switchTabView.style1.ScrollTab
        android:id="@+id/stab_tab01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9F9F9"
        android:orientation="vertical"
        app:lib_ui_view_stab_avag="true"
        app:lib_ui_view_stab_indicatorColor="@color/lib_ui_common_color_accent"
        app:lib_ui_view_stab_indicatorPadding="20dp"
        app:lib_ui_view_stab_indicatorRadius="0.5dp"
        app:lib_ui_view_stab_indicatorType="translation"
        app:lib_ui_view_stab_indicatorWeight="1dp"
        app:lib_ui_view_stab_indicatorWidth="40dp"
        app:lib_ui_view_stab_type="view_group" />

    <com.sinothk.switchTabView.style1.ScrollTab
        android:id="@+id/stab_tab02"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9F9F9"
        android:orientation="vertical"
        app:lib_ui_view_stab_avag="true"
        app:lib_ui_view_stab_indicatorColor="@color/lib_ui_common_color_accent"
        app:lib_ui_view_stab_indicatorPadding="20dp"
        app:lib_ui_view_stab_indicatorRadius="0.5dp"
        app:lib_ui_view_stab_indicatorType="none"
        app:lib_ui_view_stab_indicatorWeight="1dp"
        app:lib_ui_view_stab_indicatorWidth="40dp"
        app:lib_ui_view_stab_type="view_group" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.sinothk.switchTabView.style1.ScrollTab
        android:id="@+id/stab_tab10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9F9F9"
        android:orientation="vertical"
        app:lib_ui_view_stab_avag="false"
        app:lib_ui_view_stab_indicatorColor="@color/lib_ui_common_color_accent"
        app:lib_ui_view_stab_indicatorPadding="20dp"
        app:lib_ui_view_stab_indicatorRadius="0.5dp"
        app:lib_ui_view_stab_indicatorType="trend"
        app:lib_ui_view_stab_indicatorWeight="1dp"
        app:lib_ui_view_stab_indicatorWidth="40dp"
        app:lib_ui_view_stab_type="view_group" />

    <com.sinothk.switchTabView.style1.ScrollTab
        android:id="@+id/stab_tab11"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9F9F9"
        android:orientation="vertical"
        app:lib_ui_view_stab_avag="false"
        app:lib_ui_view_stab_indicatorColor="@color/lib_ui_common_color_accent"
        app:lib_ui_view_stab_indicatorPadding="20dp"
        app:lib_ui_view_stab_indicatorRadius="0.5dp"
        app:lib_ui_view_stab_indicatorType="translation"
        app:lib_ui_view_stab_indicatorWeight="1dp"
        app:lib_ui_view_stab_indicatorWidth="40dp"
        app:lib_ui_view_stab_type="view_group" />

    <com.sinothk.switchTabView.style1.ScrollTab
        android:id="@+id/stab_tab12"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9F9F9"
        android:orientation="vertical"
        app:lib_ui_view_stab_avag="false"
        app:lib_ui_view_stab_indicatorColor="@color/lib_ui_common_color_accent"
        app:lib_ui_view_stab_indicatorPadding="20dp"
        app:lib_ui_view_stab_indicatorRadius="0.5dp"
        app:lib_ui_view_stab_indicatorType="none"
        app:lib_ui_view_stab_indicatorWeight="1dp"
        app:lib_ui_view_stab_indicatorWidth="40dp"
        app:lib_ui_view_stab_type="view_group" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>